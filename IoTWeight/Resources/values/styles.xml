  <style name="SpreadButton" parent="DefButton">
    
  </style>

  <style name="DefButton" parent="AppTheme">
    <item name="android:background">#ff00bb22</item>
    <item name="android:layout_margin">20.0dp</item>
    <item name="android:textSize">20px</item>
    <item name="android:textColor">#fffdfffd</item>
  </style>

  
  
   <style name="DefLayout" parent="AppTheme">
    <item name="android:background">#ffffffdd</item>
     <item name="android:layout_height">match_parent</item>
  </style>
  
  <style name="DefH1" parent="DefH2">
    <item name="android:textSize">80px</item>
  </style>
  
  <style name="DefH2" parent="DefText">
    <item name="android:background">#ff009922</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">#ffffffff</item>
    <item name="android:textSize">34px</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:gravity">center</item>
  </style>
  
  <style name="DefText" parent="AppTheme">
    <item name="android:textSize">20px</item>
    <item name="android:layout_margin">20.0dp</item>
  </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:statusBarColor">#ff00bb22</item>
  </style>

</resources>